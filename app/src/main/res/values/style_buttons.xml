<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary">
        <item name="android:textColor">@color/color_text_button_primary</item>
        <item name="backgroundTint">@color/color_bg_button_primary</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">38dp</item>
        <item name="android:paddingEnd">38dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Button_Text</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">15dp</item>
    </style>
</resources>